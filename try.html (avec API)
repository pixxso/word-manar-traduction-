    <label>Source :</label><select id="from">
      <option value="fr">Fran√ßais</option><option value="en">Anglais</option><option value="ar">Arabe</option>
    </select>
    <label>Cible :</label><select id="to">
      <option value="en">Anglais</option><option value="fr">Fran√ßais</option><option value="ar">Arabe</option>
